# FitArchitect Environment Variables Template
# Copy this file to .env and fill in your actual values

# WGER Exercise Database
VITE_WGER_API_KEY=your_wger_api_key_here

# OpenAI Configuration (SERVER-SIDE ONLY)
OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4o

# Stripe Configuration (Use TEST keys for development)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_SECRET_KEY=sk_test_your_test_secret_here
VITE_STRIPE_BASIC_PLAN_ID=price_test_basic_plan_id
STRIPE_BASIC_PLAN_ID=price_test_basic_plan_id
VITE_STRIPE_PREMIUM_PLAN_ID=price_test_premium_plan_id
STRIPE_PREMIUM_PLAN_ID=price_test_premium_plan_id

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
NEXT_PUBLIC_TELEGRAM_DEV_CHANNEL_ID=your_telegram_channel_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fitarchitect

# JWT Secret (Generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here

# API Configuration
VITE_API_URL=http://localhost:3001
PORT=3001

# HTTPS Configuration (set to true for production or when testing Stripe)
HTTPS=false

# Production Configuration
NODE_ENV=development

# Anthropic API (if needed)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name